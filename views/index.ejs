<!DOCTYPE html>
<html>
<head>
    <title>Mist</title>

    <link rel="stylesheet" href="css/editor.css"/>
    <link rel="stylesheet" href="css/app.css"/>

    <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/bootstrap-responsive.min.css" />
</head>
<body ng-app="Mist" ng-controller="MainCtrl">
<!--Location of the view-->
<section id="view" ng-view="" ng-animate="{enter: 'animate-enter', leave: 'animate-leave'}"></section>

<% include partial/main.ejs %>
<% include partial/hub.ejs %>
<% include partial/project.ejs %>
<% include partial/login.ejs %>

<div class="navbar navbar-fixed-bottom navbar-inverse">
    <div class="navbar-inner">
        <div class="navbarmist">
            <a class="brand" href="/">Mist</a>
            <ul class="nav">
                <li><a href="/hub">Home</a></li>
                <li><a href="/project">Editor</a></li>
                <li><a href="/community">Community</a></li>
                <li ng-stealth ng-show="!toolbarlogin.loggedin"><a href="/login">Register</a></li>
            </ul>

            <div class="pull-right">
                <!--Show login if logged out-->
                <form name="toolbarform" class="navbar-form" ng-submit="toolbarlogin.submit(toolbarform)" ng-show="!toolbarlogin.loggedin">
                    <div>
                        <input type="text" ng-model="toolbarlogin.username" class="span2" placeholder="Username...">
                        <input type="password" ng-model="toolbarlogin.password" class="span2" placeholder="Password...">
                        <button id="toolbarsubmit" type="submit" class="btn">Log In</button>
                    </div>
                </form>
                <!--Show user if logged in-->
                <div ng-cloak ng-show="toolbarlogin.loggedin">
                    <div class="btn-group dropup">
                        <button class="btn btn-primary">{{ g_user.fields.username }}</button>
                        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <!-- dropdown menu links -->
                            <li><a href="/login">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>

<!--JavaScript References-->
<script type="text/javascript" src="js/jquery-2.0.3.min.js"></script>
<script type="text/javascript" src="js/bootstrap.js"></script>
<script type="text/javascript" src="js/angular.min.js"></script>
<script type="text/javascript" src="js/ngProgress.js"></script>
<script type="text/javascript" src="js/global.js"></script>
<script type="text/javascript" src="js/statuscode.js"></script>
<script type="text/javascript" src="js/app.js"></script>
<script type="text/javascript" src="js/controllers.js"></script>
</html>