<script src="/js/ace-min/ace.js" type="text/javascript"></script>
<script id="project.html" type="text/ng-template">
    <div ng-class="background" id="background" ng-controller="ProjectCtrl">
        <div ng-class="container-fluid" class="container-fluid">
            <div ng-class="row-fluid" class="row-fluid">
                <div class="span10 mainbody" id="editorcontainer">
                    <div id="editor"></div>
                </div>
                <div class="span2 toolbarcontainer">
                    <!--Project Description & Sample Cases-->
                    <div class="toolbarchild">
                        <h2 class="hubtitle">{{ project.challenge.title }}</h2>

                        <p class="standardtext">{{ project.challenge.fulldesc }}</p>

                        <h3 class="hubtitle">Sample Cases</h3>

                        <div ng-repeat="case in project.challenge.samplecases">
                            <div class="iocontainer">
                                <h4 class="hubtitle">Input</h4>

                                <p class="standardtext centertext">{{ case.input }}</p>
                            </div>
                            <div class="iocontainer">
                                <h4 class="hubtitle">Output</h4>

                                <p class="standardtext centertext">{{ case.output }}</p>
                            </div>
                        </div>
                    </div>
                    <!--Console and Tools-->
                    <div class="toolbarchild">
                        <h4 class="hubtitle">Project Output</h4>
                        <textarea class="toolbaroutput" readonly>{{ console.text }}</textarea>

                        <div class="toolbar-btn-container">
                            <a class="btn btn-warning" ng-click="tools.save()">Save</a>
                            <a class="btn btn-success" ng-click="tools.compile()">Compile & Submit</a>
                        </div>
                        <br/>
                        <!--Programming Language Selection-->
                        <div class="row-fluid">
                            <label class="span4 selectlabel">Language:</label>
                            <select class="span8" ng-model="lang.selected" ng-options="language.key as language.value for language in languages" ng-change="languageSelected(lang.selected)">
                            </select>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</script>